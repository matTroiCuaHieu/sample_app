<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".sample_app"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("static_pages.home.title"), root_path %></li>
        <li><%= link_to t("static_pages.help.title"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t(".users"), users_path %></li>
          <li class="dropdown">
            <%= link_to t(".account_html"), "#", class: "dropdown-toggle", "data-toggle": "dropdown" %>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile"), current_user, class: "dropdown-item" %></li>
              <li><%= link_to t(".settings"), edit_user_path(current_user), class: "dropdown-item" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".logout"), logout_path, method: :delete, class: "dropdown-item"%>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("users.sign_in"), login_path %></li>
        <% end %>  
      </ul>
    </nav>
  </div>
</header>
